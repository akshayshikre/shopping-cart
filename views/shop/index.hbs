{{# each products}}
<div class="row" style="padding-top: 20px">
  {{# each this}}
    <div class="col-sm-6 col-md-4">
      <div class="card" style="width: 18rem;">
        <img src="{{this.imagePath}}" class="card-img-top img-responsive" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.description}}</p>
          <div>
          <div class="price pull-left">${{this.price}}</div>
          <a href="/cart/add/{{this._id}}" class="btn btn-primary pull-right">Add to Shopping Cart</a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{/each}}