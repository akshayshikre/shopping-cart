{{# if products}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <ul class="list-group">
      {{#each products}}
       <li class="list-group-item">
         <span class="badge">{{this.qty}}</span>
         <strong>{{this.item.title}}</strong>
         <span class="label label-success">${{ this.price }}</span>
         <div class="btn-group">
           <button class="btn-primary btn btn-xs dropdown-toggel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="actionBtn">Action <span class="caret"></span></button>
           <div class="dropdown-menu" aria-labelledby="actionBtn">
           <ul>
             <li><a href="#">Reduce by 1</a></li>
             <li><a href="#">Remove all</a></li>
           </ul>
           </div>
         </div>
       </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <strong>Toatl: {{totalPrice}} </strong>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <a class="btn btn-success" href="/cart/checkout" type="button">Checkout</a>
  </div>
</div>
{{ else }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
    <strong>No items to checkout</strong>
  </div>
</div>
{{/if}}